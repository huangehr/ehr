	<groupId>com.yihu.ehr</groupId>
	<artifactId>standard-svr</artifactId>
	<version>0.0.1</version>
	<packaging>jar</packaging>

	<name>svr-standard</name>
	<description>EHR platform standard service</description>

	<parent>
