<configuration>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://hadoop-test/hbase</value>
    </property>

    <property>
        <name>hbase.rpc.engine</name>
        <value>org.apache.hadoop.hbase.ipc.SecureRpcEngine</value>
    </property>
    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>host-172-17-110-20,host-172-17-110-86,host-172-17-110-18</value>
    </property>
    <property>
        <name>hbase.security.authentication</name>
        <value>kerberos</value>
    </property>

    <property>
        <name>hbase.regionserver.kerberos.principal</name>
        <value>hbase/_HOST@for_hadoop</value>
    </property>
    <property>
        <name>hbase.regionserver.keytab.file</name>
        <value>/usr/local/hbase-1.0.1.1/conf/hbase.keytab</value>
    </property>
    <property>
        <name>hbase.master.kerberos.principal</name>
        <value>hbase/_HOST@for_hadoop</value>
    </property>
    <property>
        <name>hbase.master.keytab.file</name>
        <value>/usr/local/hbase-1.0.1.1/conf/hbase.keytab</value>
    </property>

    <!-- SEP is basically replication, so enable it -->
    <property>
        <name>hbase.replication</name>
        <value>true</value>
    </property>
    <!-- Source ratio of 100% makes sure that each SEP consumer is actually
         used (otherwise, some can sit idle, especially with small clusters) -->
    <property>
        <name>replication.source.ratio</name>
        <value>1.0</value>
    </property>
    <!-- Maximum number of hlog entries to replicate in one go. If this is
         large, and a consumer takes a while to process the events, the
         HBase rpc call will time out. -->
    <property>
        <name>replication.source.nb.capacity</name>
        <value>1000</value>
    </property>
</configuration>
