<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

	<property name="log_home" value="/ehr-logs/svr-pack-resolve/" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) --- [ %thread] - %magenta(%logger{36}): %msg%n</pattern>
			<charset class="java.nio.charset.Charset">UTF-8</charset>
		</encoder>
	</appender>

	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log_home}/pack-resolve-%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level --- [ %thread]: %msg%n</pattern>
			<charset class="java.nio.charset.Charset">UTF-8</charset>
		</encoder>
	</appender>

	<logger name="com.yihu.ehr.resolve.util.PackResolveLogger" level="INFO" additivity="false">
		<appender-ref ref="file" />
	</logger>

	<root level="INFO">
		<appender-ref ref="console" />
	</root>

</configuration>